    {{ container_name }}:
        container_name: {{ container_name }}
        build: ./prestashop
        image: skyflow/prestashop
        restart: 'on-failure'
        working_dir: /{{ application_name }}
        ports:
            - {{ port }}:80
        volumes:
            - ../:/{{ application_name }}
            - ./prestashop/conf/apache2:/etc/apache2
            - ./prestashop/conf/php7/php.ini:/etc/php7/php.ini