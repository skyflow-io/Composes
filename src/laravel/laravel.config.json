{
  "name": "Laravel",
  "description": "Web server for Laravel application.",
  "author": {
    "name": "Skyflow",
    "site": "https:\/\/skyflow.io",
    "github": "https://github.com/skyflow-io/Composes/tree/master/src/laravel"
  },
  "slug": "laravel",
  "variables": {
    "version": {
      "description": "Choose your image version",
      "value": "latest",
      "type": "list",
      "choices": [
        "latest"
      ]
    },
    "application_name": {
      "description": "Application name",
      "value": "laravel_app"
    },
    "server_name": {
      "description": "Your server host name",
      "value": "localhost"
    },
    "server_admin": {
      "description": "Administrator e-mail",
      "value": "admin@myapp.com"
    },
    "port": {
      "description": "Application port",
      "value": "80"
    }
  },
  "update": [
    {
      "entry": "Dockerfile.dist",
      "output": "Dockerfile"
    }
  ]
}
